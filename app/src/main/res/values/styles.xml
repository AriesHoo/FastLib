<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowBackground">@color/colorSwipeBackBackground</item>-->
        <!--建议使用全透明-减少一层绘制避免过度绘制-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--不使用滑动返回的Activity使用这个主题-->
    <style name="AppTheme.NotTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="SupperTextStyleItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_margin_item</item>
        <item name="android:minHeight">45dp</item>
        <item name="com.aries.library.fast.demo:sLeftTextSize">16dp</item>
        <item name="com.aries.library.fast.demo:sDividerLineColor">@color/colorLineGray</item>
        <item name="com.aries.library.fast.demo:sDividerLineType">both</item>
        <item name="com.aries.library.fast.demo:sLeftTextColor">@color/colorTextBlack</item>
        <item name="com.aries.library.fast.demo:sRightIconRes">@drawable/ic_arrow_right</item>
        <item name="com.aries.library.fast.demo:sRightTextColor">@color/colorTextGray</item>
        <item name="com.aries.library.fast.demo:sRightTextSize">12dp</item>
    </style>

    <style name="TextStyleMovieItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_toRightOf">@id/iv_coverMovie</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/colorTextBlackLight</item>
        <item name="android:textSize">12dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!--item根布局样式-->
    <style name="RadiusViewItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_margin_item</item>
        <item name="android:layout_marginTop">@dimen/dp_margin_item</item>
        <item name="android:layout_marginRight">@dimen/dp_margin_item</item>
        <item name="com.aries.library.fast.demo:rv_backgroundColor">@color/colorWhite</item>
        <item name="com.aries.library.fast.demo:rv_backgroundPressedColor">@color/colorWhitePressed</item>
        <item name="com.aries.library.fast.demo:rv_radius">8dp</item>
        <item name="com.aries.library.fast.demo:rv_strokeColor">@color/colorLineGray</item>
        <item name="com.aries.library.fast.demo:rv_strokeWidth">@dimen/dp_line_size</item>
    </style>
</resources>
