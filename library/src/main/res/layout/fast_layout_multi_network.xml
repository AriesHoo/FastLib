<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorMultiBackground"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_networkMulti"
        android:layout_width="@dimen/dp_multi_img_height"
        android:layout_height="@dimen/dp_multi_img_height"
        android:src="@drawable/fast_img_multi_network"/>

    <TextView
        android:id="@+id/tv_networkMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_multi_margin"
        android:gravity="center"
        android:text="@string/fast_multi_network"
        android:textColor="@color/colorMultiText"
        android:textSize="@dimen/dp_multi_text_size"/>

</LinearLayout>